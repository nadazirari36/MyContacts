<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Uniquement Internet pour Firebase -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Contacts"
        tools:targetApi="31">

        <activity
            android:name="com.nada.mycontact.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Contacts.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.nada.mycontact.activities.MainActivity"
            android:exported="false" />

        <activity
            android:name="com.nada.mycontact.activities.AddEditContactActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustResize" />

        <activity
            android:name="com.nada.mycontact.activities.ContactDetailsActivity"
            android:exported="false" />

    </application>

</manifest>